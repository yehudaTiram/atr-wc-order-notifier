add_action('admin_init', 'atr_wc_notifier_register_settings');
function atr_wc_notifier_register_settings()
{
    register_setting('atr_wc_notifier_options', 'atr_wc_notifier_options');
    add_settings_section('atr_wc_notifier_telegram_settings', 'Telegram Settings', '', 'atr_wc_notifier_settings');
    add_settings_field('atr_wc_notifier_telegram_enabled', 'Enable Telegram', 'atr_wc_notifier_telegram_enabled_callback', 'atr_wc_notifier_settings', 'atr_wc_notifier_telegram_settings');
    add_settings_field('atr_wc_notifier_telegram_webhook_url', 'Webhook URL', 'atr_wc_notifier_telegram_webhook_url_callback', 'atr_wc_notifier_settings', 'atr_wc_notifier_telegram_settings');
    add_settings_field('atr_wc_notifier_telegram_bot_token', 'Bot Token', 'atr_wc_notifier_telegram_bot_token_callback', 'atr_wc_notifier_settings', 'atr_wc_notifier_telegram_settings');
    add_settings_field('atr_wc_notifier_telegram_chat_id', 'Chat ID', 'atr_wc_notifier_telegram_chat_id_callback', 'atr_wc_notifier_settings', 'atr_wc_notifier_telegram_settings');
}

